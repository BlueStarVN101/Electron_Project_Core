{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2021"],
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*"
  ]
}
