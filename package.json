{
  "name": "all-in-one",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "tsc --watch --pretty",
    "dev:renderer": "cross-env NODE_ENV=development webpack --config webpack.config.js --watch",
    "dev:electron": "wait-on dist/main.js dist/preload.js dist/bundle.js && cross-env NODE_ENV=development electronmon dist/main.js --watch dist/main.js --watch dist/preload.js",
    "typecheck": "tsc --noEmit --pretty",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js && tsc -p tsconfig.prod.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "tinleducdev@gmail.com",
    "productName": "All in one",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.4",
    "nodemon": "^3.1.11",
    "typescript": "^5.4.5",
    "wait-on": "^9.0.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "latest-version": "^9.0.0",
    "package-json": "^10.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "update-notifier": "^7.3.1"
  }
}
