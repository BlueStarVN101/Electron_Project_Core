{
  "name": "all-in-one",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon --watch src --watch webpack.config.js --ext ts,tsx,js,jsx --exec \"npm run dev:build && cross-env NODE_ENV=development electron dist/main/index.js\"",
    "dev:build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.json",
    "build:renderer": "cross-env NODE_ENV=development webpack --config webpack.config.js",
    "typecheck": "tsc --noEmit --pretty",
    "test": "jest --config tests/jest.config.js",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:ui": "npm run build && playwright test --config tests/playwright.config.ts",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js && tsc -p tsconfig.prod.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "tinleducdev@gmail.com",
    "productName": "All in one",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "electron": "^39.2.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.11",
    "playwright-core": "^1.56.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "latest-version": "^9.0.0",
    "package-json": "^10.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "update-notifier": "^7.3.1"
  }
}
